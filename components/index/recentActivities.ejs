  <% const menuItemContent =
  ['社群活動','演出','聯誼','遊戲競賽','社群活動','展覽']; for(let i= 0; i < 6;
  i++ ) { %>
  <div class="col-4">
    <div class="d-flex flex-column flex-shrink-0">
      <p
        class="english fs-1 reset text-black pb-1 border-bottom border-3 border-black"
      >
        19 MAY 2023
      </p>
      <div
        style="
          background-image: url('https://github.com/hexschool/2022-web-layout-training/blob/main/2023week6/event/0<%= i+=1 %>.jpg?raw=true');
          height: 255px;
